{
	"name": "Twitch Live",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Twitch Live allows you to follow your favorite streamers any time they are live",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Twitch Live",
		"default_popup": "popup.html"
	},
	"background":{
		"page": "background.html"
	},
	"permissions": [
          "storage",
          "background",
          "notifications",
          "https://static-cdn.jtvnw.net/*",
          "http://lol.fight-for-fun.com/*"
        ],
	"content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
	"icons": {
		"128": "icon.png"
	}
}